<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <!-- Dégradé linéaire avec un angle ajusté pour couvrir toute la surface -->
    <gradient
        android:angle="45"
    android:startColor="#E2D6F8"
    android:endColor="#F6F0FF"
    android:type="linear" />

    <!-- Coins arrondis mais sans couper l'arc -->
    <corners android:topLeftRadius="150dp"
        android:topRightRadius="150dp"/>
</shape>
