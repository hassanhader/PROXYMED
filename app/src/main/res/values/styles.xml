<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Police principale pour toute l'application -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <!-- Titre principal (ex: Page Title) -->
    <style name="TextAppearance.Title">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- Sous-titre -->
    <style name="TextAppearance.Subtitle">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter</item>
    </style>


    <!-- Texte normal -->
    <style name="TextAppearance.Body">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Petits textes -->
    <style name="TextAppearance.Small">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1A1717</item>
    </style>

    <style name="FormField">
        <item name="android:background">@drawable/form_field_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>


        <!-- Ombre pour le texte -->
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>

        <!-- Hauteur fixe des champs -->
        <item name="android:layout_height">48dp</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SpinnerStyle">
        <!-- Utilise l'arrière-plan personnalisé des champs -->
        <item name="android:background">@drawable/form_field_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_height">48dp</item>

        <!-- Ombre pour le texte -->
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="SpinnerDropdownStyle">
        <item name="android:fontFamily">@font/inter</item> <!-- Appliquer la même police -->
        <item name="android:textColor">@color/black</item> <!-- Police et couleur de texte -->
        <item name="android:textSize">16sp</item>
    </style>




</resources>
