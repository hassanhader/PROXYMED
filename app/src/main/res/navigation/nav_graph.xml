<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <!-- Fragment de connexion -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.proxymed.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_login_to_reset_password"
            app:destination="@id/resetPasswordFragment" />

    </fragment>

    <!-- Fragment d'inscription -->
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.proxymed.ui.auth.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Fragment de rÃ©initialisation du mot de passe -->
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.proxymed.ui.auth.ResetPasswordFragment"
        android:label="Reset Password"
        tools:layout="@layout/fragment_reset_password">
        <action
            android:id="@+id/action_reset_password_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>
