<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_fond">



        <!-- Bloc contenant le message, le champ email et le bouton -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blockLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <!-- Message en haut centré -->
            <TextView
                android:id="@+id/tvResetPasswordMessage"
                android:layout_width="356dp"
                android:layout_height="66dp"
                android:layout_marginHorizontal="24dp"
                android:gravity="center"
                android:text="Entrez votre adresse courriel et nous vous enverrons un mail de récupération si l'email correspond à un compte existant."
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Champ Email -->
            <EditText
                android:id="@+id/etEmail"
                style="@style/FormField"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Entrez votre email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvResetPasswordMessage" />

            <!-- Bouton Valider -->
            <Button
                android:id="@+id/btnResetPassword"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Valider"
                style="@style/ButtonStyle"
                android:layout_margin="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/etEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
