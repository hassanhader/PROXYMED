<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dashboardFragment"
            type="com.example.proxymed.ui.nurse.dashboard.DashboardFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <!-- Carte 1 : Liste des patients -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardListePatients"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cardRapports"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"> <!-- Carte 1: 20% de l'écran -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Overlay pour assombrir l'image -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:alpha="0.8"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/listepatients"
                    android:alpha="0.5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patients"
                    android:textColor="@android:color/white"
                    style="@style/TextAppearance.Title"
                    android:layout_centerInParent="true"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textAllCaps="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Carte 2 : Rapports soumis -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRapports"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardListePatients"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cardVisites"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"> <!-- Carte 2: 20% de l'écran -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Overlay pour assombrir l'image -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:alpha="0.8"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rapports"
                    android:alpha="0.5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOUMISSION"
                    android:textColor="@android:color/white"
                    style="@style/TextAppearance.Title"
                    android:layout_centerInParent="true"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textAllCaps="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Carte 3 : Visites à effectuer -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVisites"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardRapports"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"> <!-- Carte 3: 20% de l'écran -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Overlay pour assombrir l'image -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:alpha="0.8"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/visites"
                    android:alpha="0.5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visites"
                    android:textColor="@android:color/white"
                    style="@style/TextAppearance.Title"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textAllCaps="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
