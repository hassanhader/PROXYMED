<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_fond">

    <TextView
        android:id="@+id/titreVisiteCreation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Créer une visite"
        android:textColor="#673AB7"
        android:gravity="center"
        style="@style/TextAppearance.Title"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >

    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/titreVisiteCreation"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="11dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <!-- Sélection du patient -->

            <!-- Adresse du patient -->
            <Spinner
                android:id="@+id/spinner_patient"
                style="@style/SpinnerStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Sélectionner un patient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <EditText
                android:id="@+id/edit_adresse"
                style="@style/FormField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="Adresse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_patient"
                android:layout_marginTop="@dimen/activity_horizontal_margin"/>

            <!-- Date et Heure -->
            <EditText
                android:id="@+id/edit_date_heure"
                style="@style/FormField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_calendar"
                android:focusable="false"
                android:hint="Sélectionner une date et une heure"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_adresse"
                android:layout_marginTop="@dimen/activity_horizontal_margin"/>


            <!-- Pression Artérielle -->
            <EditText
                android:id="@+id/edit_pression"
                style="@style/FormField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Pression artérielle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_date_heure"
                android:layout_marginTop="@dimen/activity_horizontal_margin"/>


            <!-- Glycémie -->
            <EditText
                android:id="@+id/edit_glycemie"
                style="@style/FormField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Ex: Glycémie (g/l)"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_pression" />

            <!-- Poids -->
            <EditText
                android:id="@+id/edit_poids"
                style="@style/FormField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Poids (kg)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_glycemie"
                android:layout_marginTop="@dimen/activity_horizontal_margin"/>


            <!-- Fréquence Respiratoire -->
            <EditText
                android:id="@+id/edit_freq_resp"
                style="@style/FormField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Fréquences respiratoires (cycles/min)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/edit_poids" />

            <!-- Fréquence Cardiaque -->
            <EditText
                android:id="@+id/edit_freq_cardiaque"
                style="@style/FormField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Fréquence cardiaque (bpm)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/edit_freq_resp" />

            <!-- Saturation en oxygène -->
            <EditText
                android:id="@+id/edit_saturation"
                style="@style/FormField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Saturation oxygene (%)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/edit_freq_cardiaque" />

            <!-- État Général -->
            <EditText
                android:id="@+id/edit_notes_infirmier"
                style="@style/FormField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Remarques de l'infirmier/e"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/edit_saturation" />

            <!-- Observations (Lecture seule) -->
            <EditText
                android:id="@+id/edit_observations_medecin"
                style="@style/FormField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:focusable="false"
                android:hint="Observations du médecin traitant"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_notes_infirmier" />

            <Button
                android:id="@+id/btn_prendre_photo"
                android:layout_width="200dp"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:text="Prendre une photo"
                app:layout_constraintTop_toBottomOf="@id/edit_observations_medecin" />


            <!-- Prendre des photos -->
            <ImageView
                android:id="@+id/image1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_prendre_photo" />



            <!-- Géolocalisation -->
            <Button
                android:id="@+id/btn_geolocaliser"
                style="@style/ButtonStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Me géolocaliser"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/image1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="300dp"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="Carte de géolocalisation"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/btn_geolocaliser"
                android:layout_margin="@dimen/activity_horizontal_margin"/>


            <Button
                android:id="@+id/btn_enregistrer"
                android:layout_width="wrap_content"
                style="@style/ButtonStyle"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:text="Valider"
                app:layout_constraintTop_toBottomOf="@id/mapView"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
